<div class="item">
  <div class="timeline-arrow"><span>{{unbound postedTime}}</span></div>
  <div class="timeline-arrows"></div>
  <div {{action toggleCuration}} {{bindAttr class="starButtonClass"}}></div>

  <div class="media">
    {{#each model.media.displayable}}
      {{view IWitness.MediaView mediaBinding="this"}}
    {{/each}}
  </div>

  <div class="heading">
    <div class="pic">
      <a target="_blank" href="{{unbound model.userUrl}}">
        <img  src="{{unbound model.avatarSrc}}">
      </a>
    </div>

    {{#if model.title}}
      <strong>{{unbound model.title}}</strong>
      by
    {{/if}}

    <a target="_blank" class="user-name-primary"  href="{{unbound model.userUrl}}">
      {{unbound model.userNamePrimary}}
    </a>

    {{#if model.userNameSecondary}}
      <br>
      <a target="_blank" class="user-name-secondary"  href="{{unbound model.userUrl}}">
        {{unbound model.userNameSecondary}}
      </a>
    {{/if}}
  </div>

  <div class="result_content">
    <p>{{unbound contentText}}</p>
  </div>

  <div class="footer">
    <div class="pin" {{action "recenterOnResult"}} title="Recenter map"></div>

    <div class="small-links">
      <a class="permalink" target="_blank"  href="{{unbound model.permalinkUrl}}">
        {{unbound model.permalinkText}}
      </a>
      <div class="timestamp">
        <a target="_blank"  href="{{unbound model.permalinkUrl}}">
          {{unbound postedDate}}
          <br>
          {{unbound postedTime}}
        </a>
      </div>
    </div> <!-- /.small-links -->

    {{#if model.isTweet}}
      <div class="twitter-actions">
        <a href="https://twitter.com/intent/tweet?in_reply_to={{unbound model.idStr}}" target="_blank" class="reply" title="Reply">Reply</a>
        <a href="https://twitter.com/intent/retweet?tweet_id={{unbound model.idStr}}" target="_blank" class="retweet" title="Retweet">Retweet</a>
        <a href="https://twitter.com/intent/favorite?tweet_id={{unbound model.idStr}}" target="_blank" class="favorite" title="Favorite">Favorite</a>
        <a href="https://twitter.com/intent/user?screen_name={{unbound model.userNamePrimary}}" target="_blank" class="add" title="Follow">Follow</a>
      </div>
    {{/if}}
  </div> <!-- /.footer -->
</div>

<div class="item-footer">
  {{#view flaggedView}}{{flaggedText}} for export{{/view}}
</div>

<div class="popover">
  <div class="heading" {{action "toggleEmbed"}}>Embed</div>
  <div class="content linenums">{{model.embedHtml}}</div>
</div>
